{
  "name": "Host name rewriter",
  "manifest_version": 2,
  "version": "1.0.1",
  "description": "Rewrite URLs for using a different host when accessing a web page.",
  "options_page": "options.html",
  "permissions": [
    "storage",
    "webNavigation",
    "tabs"
  ],
  "icons": {
    "16": "icon16.png",
    "64": "icon64.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": ["event.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "19": "icon19.png"
    },
    "default_title": "Host name rewriter"
  }
}
