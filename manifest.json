{
  "name": "Host name rewriter",
  "manifest_version": 2,
  "version": "1.0.0",
  "description": "Rewrite URLs for using a different host when accessing a web page.",
  "options_page": "options.html",
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icon16.png",
    "64": "icon64.png",
    "128": "icon128.png"
  },
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["rewrite.js"]
  }],
  "background": {
    "scripts": ["event.js"],
    "persistent": false
  }
}
